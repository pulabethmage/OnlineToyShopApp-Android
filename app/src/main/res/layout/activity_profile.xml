<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ImgProfilePic"
            app:srcCompat="@drawable/ic_baseline_account_circle_24"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignBottom="@+id/ImgProfilePic"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_baseline_camera_alt_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


    </RelativeLayout>



    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:text="My Profile"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="May God bless all the people who are helping other peoples who have a hard time in finding a job because of this pandemic"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="100dp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:hint="Profile Name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <EditText
            android:inputType="number"
            android:hint="+7845 456 4562"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:inputType="textEmailAddress"
            android:hint="profileemail@email.com"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:text="SMS alert activation"
            android:textStyle="bold"
            android:textColor="@color/ColorPinkLight"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>

        <Switch
            android:checked="true"
            android:id="@+id/switchbutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>


        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"/>


    </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

                <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Save"
                android:background="@drawable/buttonback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:onClick="showDialog"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Chagne Password"
                android:background="@drawable/button_clicked_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>